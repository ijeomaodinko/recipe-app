<%# <h1>Shopping list</h1> %>
<div class = "text-center">
	<h1>Shopping Listsssssssssssssssssss</h1>
</div>
<div class="d-flex justify-content-between m-5">
	<div>
		<h5>Amount of food items to buy: <%= @list.length %> </h5>
		<h5 class="fw-bold">Total price: <%= @total_amount %> </h5>
	</div>
	<div>
		<h5>Recipe: <%= link_to @recipes.name, recipe_path(@recipes) %></h5>
	</div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
    <tbody>
      <% @list.each do |lis| %>
        <tr>
          <td><%= lis[0] %></td>
          <td><%= lis[1] %></td>
          <td><%= lis[2] %></td>
         
      <% end %>
    </tbody>
</table>
