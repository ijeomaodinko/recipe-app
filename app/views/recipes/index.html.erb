<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes",class="d-flex flex-column align-items-center gap-3",  style="border-width:0.5rem;">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe %>
    </p>
  <% end %>
</div>

<%= link_to "New recipe", new_recipe_path %>
