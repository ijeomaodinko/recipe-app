<div class="w-full max-w-md">
  <h3 class="h3">Add New Food</h3>
  <%= form_with model: @food, class: "form", scope: :foods do |f| %>

    <div class="mb-3">
      <%= f.label :Name, "Food", class: "form-label" %>
      <%= f.text_field :name, placeholder: "Food", required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :measurement_unit, class: "form-label" %>
      <%= f.text_field :measurement_unit, placeholder: "Enter Measurement Unit", required: true, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :price, class: "form-label" %>
      <%= f.text_field :price, placeholder: "Unit Price", required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :quantity, class: "form-label" %>
      <%= f.number_field :quantity, placeholder: "Quantity", required: true, class: "form-control" %>
    </div>

    <%= f.submit "Add Food", class: "btn btn-primary" %>
  <% end %>
</div>
