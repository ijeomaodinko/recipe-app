<h3 class="h3">Add Ingredients for the Recipe</h3>

<div class="w-full max-w-md my-5">
<%= form_with model: @recipe_food, url: recipe_recipe_foods_path(@recipe), class: "form" do |f| %>
    <div class="mb-3">
      <%= f.label :Quantity, class: "form-label" %>
      <%= f.number_field :quantity, placeholder: 0, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
    <%= f.collection_select :food_id, @foods, :id, :name, { prompt: 'Select a Food' }, class: "btn btn-secondary" %>
    </div>

    <br>

    <div>
      <%= f.submit "Add Ingredients", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
